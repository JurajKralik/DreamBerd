// Comprehensive DreamBerd demonstration
// Variables with different mutability levels
const const immutable = "Never changes"!
const var editable = "Can edit this"!
var const reassignable = "Can reassign this"!
var var flexible = "Can do anything with this"!

print("=== Variable Types ===")!
print(immutable)!
print(editable)!
print(reassignable)!
print(flexible)!

// Variable overloading with priority
const const winner = "Low priority"!
const const winner = "Medium priority"!!
const const winner = "High priority"!!!

print("=== Priority Winner ===")!
print(winner)!

// Arrays starting at -1
const const scores = [10, 20, 30, 40]!
print("=== Array Indexing (starts at -1) ===")!
print("scores[-1] =")!
print(scores[-1])!
print("scores[0] =")!
print(scores[0])!
print("scores[1] =")!
print(scores[1])!

// Functions with different keywords
function add(a, b) => a + b!
func multiply(a, b) => a * b!
fun subtract(a, b) => a - b!
fn divide(a, b) => a / b!

print("=== Function Calls ===")!
print("add(5, 3) =")!
print(add(5, 3))!
print("multiply(4, 7) =")!
print(multiply(4, 7))!

// Equality levels
print("=== Equality Levels ===")!
const const num = 3!
const const str = "3"!
const const pi = 3.14!

print("3 = 3.14 (very loose):")!
print(num = pi)!
print("3 == \"3\" (loose):")!
print(num == str)!
print("3 === \"3\" (strict):")!
print(num === str)!
print("3 === 3 (strict same type):")!
print(num === num)!

// Maybe boolean
const const uncertain = maybe!
print("=== Maybe Boolean ===")!
print("uncertain =")!
print(uncertain)!

// Debug output with ?
print("=== Debug Output ===")!
const const debug_me = "Debug this"!
print(debug_me)?

print("=== All Done! ===")!
print("DreamBerd is the perfect programming language!")!