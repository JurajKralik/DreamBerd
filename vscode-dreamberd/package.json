{
    "name": "dreamberd-language-support",
    "displayName": "DreamBerd Language Support",
    "description": "Syntax highlighting and language support for DreamBerd/Gulf of Mexico programming language",
    "version": "1.0.0",
    "publisher": "dreamberd-community",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "dreamberd",
        "gulf of mexico",
        "programming language",
        "syntax highlighting"
    ],
    "author": "DreamBerd Community",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JurajKralik/DreamBerd.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "dreamberd",
                "aliases": [
                    "DreamBerd",
                    "Gulf of Mexico",
                    "dreamberd"
                ],
                "extensions": [
                    ".db",
                    ".gom",
                    ".dreamberd"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dreamberd",
                "scopeName": "source.dreamberd", 
                "path": "./syntaxes/dreamberd_simple.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "dreamberd",
                "path": "./snippets/dreamberd.json"
            }
        ]
    },
    "activationEvents": [],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "bugs": {
        "url": "https://github.com/JurajKralik/DreamBerd/issues"
    },
    "homepage": "https://github.com/JurajKralik/DreamBerd#readme"
}
